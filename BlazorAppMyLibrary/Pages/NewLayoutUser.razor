<style>

    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .content {
        flex: 1;
    }

    .social-icons {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
        margin-bottom: 30px;
        font-size: 30px;
    }

    .social-icon {
        margin: 0 10px;
        cursor: pointer;
        transition: transform 0.3s ease-in-out;
    }

        .social-icon:hover {
            transform: scale(1.2);
        }

    .avatar-img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border: 1px solid #000;
