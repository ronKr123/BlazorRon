<style>
    .center {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .book-img {
        max-width: 80%;
        height: auto;
        margin-top: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .book-details {
        margin-top: 20px;
        text-align: center;
        color: #333;
    }

    .book-name {
        font-size: 1.5em;
    }

    .decorative-bar {
        width: 80%;
        height: 10px;
        background-color: #ddd;
        margin-top: 20px;
    }

    .audio-controls {
        margin-top: 20px;
        display: flex;
        justify-content: space-around;
        width: 80%;
    }

    .control-button {
        font-size: 1.2em;
        padding: 10px 20px;
        margin: 0 10px;
        background-color: #2ecc71;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .control-button:hover {
            background-color: #27ae60;
        }

    #progress-bar {
        width: 80%;
        margin-top: 20px;
        cursor: pointer;
    }
</style>

<script>
    var audio = document.getElementById("myAudio");

    function playAudio() {
        audio.play();
    }

    function pauseAudio() {
        audio.pause();
    }

    function stopAudio() {
        audio.pause();
        audio.currentTime = 0;
    }

    function skipAudioForward() {
        audio.currentTime += 10; // Adjust as needed for the skip duration
    }

    function handleProgressBarInput() {
        var progress = document.getElementById("progress-bar").value;
        audio.currentTime = (progress / 100) * audio.duration;
    }

    audio.addEventListener("ended", function () {
        // Reset the progress bar and audio playback when audio finishes
        document.getElementById("progress-bar").value = 0;
        audio.currentTime = 0;
    });

    audio.addEventListener("timeupdate", function () {
        var progress = (audio.currentTime / audio.duration) * 100;
        document.getElementById("progress-bar").value = progress;
    });

</script>

