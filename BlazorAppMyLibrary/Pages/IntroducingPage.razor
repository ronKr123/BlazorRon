@page "/IntroducingPage"
@layout LayoutOnlyFooter
@inject UserService userService
@inject NavigationManager nav
@inject IJSRuntime JSRuntime


<style>
    body {
        background-color:brown; /* Set your desired background color */
    }

    .bi {
        font-size: 3.5rem; /* Adjust the icon size as needed */
    }
</style>

<script>
    window.addEventListener('load', function () {
        history.pushState(null, null, document.URL);
        window.addEventListener('popstate', function () {
            history.pushState(null, null, document.URL);
        });
    });
</script>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@if (userService.CurrentUser != null)
{
    <div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalTour">
        <div class="modal-dialog text-right" role="document">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-body p-5">

                    <h2 class="fw-bold text-center mb-3">היי @userService.CurrentUser.FirstName</h2>
                    <h1 class="text-center mb-3" style="font-size:20px;">ברוכ\ה הבא\ה לאתר הספרייה שלי</h1>
                    <h1 class="text-center" style="font-size:20px;">?מה אפשר לעשות כאן</h1>
                    <ul class="d-grid gap-4 my-5 list-unstyled small">
                        <li class="d-flex gap-4">
                            <svg class="bi text-body-secondary flex-shrink-0" width="48" height="48" fill="#007bff"><i class="bi bi-book"></i></svg>
                            <div style="align-self:center;">
                                <h5 class="mb-0">ספרים חדשים</h5>בתוך האתר תגלו מבחר רחב ומגוון של ספרים. ותוכלו לחפש את הספר המתאים עבורכם שתרצו להשאיל
                            </div>
                        </li>
                        <li class="d-flex gap-4">
                            <svg class="bi text-warning flex-shrink-0" width="48" height="48" fill="#ffc107"><i class="bi bi-star"></i></svg>
                            <div>
                                <h5 class="mb-0">שמירת ספרים אהובים</h5>בהמשך תוכלו לבחור את הספרים האהובים עליכם, אשר ישמרו לכם עבור המשתמש שלכם
                            </div>
                        </li>
                        <li class="d-flex gap-4">
                            <svg class="bi text-primary flex-shrink-0" width="48" height="48" fill="#007bff"><i class="bi bi-music-note-beamed"></i></svg>
                            <div>
                                <h5 class="mb-0">ספרים דיגיטליים</h5>
                               תוכלו להאזין לספרים דיגיטליים מכל מקום ובכל זמן מתי שתרצו. עליכם לבקש השאלה של ספר דיגיטלי מהמנהל
                            </div>
                        </li>
                    </ul>
                    <button type="button" class="btn btn-lg btn-primary w-100" data-bs-dismiss="modal" @onclick="Start">בואו נתחיל</button>
                </div>
            </div>
        </div>
    </div>
}


    

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

@code {

    public async Task Start()
    {
        nav.NavigateTo("HomePageUser", forceLoad:true);

        // Use JavaScript interop to manipulate the browser's history
        // not let to get back - fix it
        // await JSRuntime.InvokeVoidAsync("preventBack");
    }

}

