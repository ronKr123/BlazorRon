@inherits LayoutComponentBase

@using BlazorAppMyLibrary;
@using Microsoft.JSInterop;

@inject UserService userService
@inject NavigationManager nav
@inject IJSRuntime JSRuntime


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />


<div class="container">
    <div class="row">
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 1" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 2" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 3" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 4" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 5" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 6" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1" >
            <img src="/Images/TabsPicturesAnimals/squirl-cat-removebg-preview.png" alt="Image 7" class="img-fluid" />
        </div>
        <div class="col-md-3 mx-1">
            @if(userService.CurrentUser != null)
            {
                <div class="nav-item dropdown ml-10">
                    <a class="nav-link dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="AvatarsFolder/squirlAvatar (1).jpg" alt="Avatar" class="avatar-img rounded-circle border border-dark">
                        <span class="user-info">היי @userService.CurrentUser.FirstName</span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" >עדכון פרטים</a></li>
                        <li><a class="dropdown-item" >התנתקות</a></li>
                    </ul>
                </div>
            }


        </div>
    </div>
</div>


<div class="content">
    @Body
</div>

<footer class="text-center bg-body-tertiary pt-4">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="social-icons">
                    <div class="social-icon">
                        <i class="bi bi-android2"></i>
                    </div>
                    <div class="social-icon">
                        <i class="bi bi-google-play"></i>
                    </div>
                    <div class="social-icon">
                        <i class="bi bi-apple"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
        © 2024 My_Library_Ron
    </div>
</footer>



<style>

    body{
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .content {
        flex: 1;
    }

    .social-icons {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
        margin-bottom: 30px;
        font-size:30px;
    }

    .social-icon {
        margin: 0 10px;
        cursor: pointer;
        transition: transform 0.3s ease-in-out;
    }

    .social-icon:hover {
         transform: scale(1.2);
    }


</style>


@code {
 
    
    private void NavigateToPage(string imageName)
    {
        nav.NavigateTo($"/image-details/{imageName}");
    }

}
